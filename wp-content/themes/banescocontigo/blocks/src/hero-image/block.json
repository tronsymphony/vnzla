{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "banescocontigo/hero-image",
	"version": "1.0.0",
	"title": "Hero image",
	"category": "widgets",
	"icon": "admin-home",
	"supports": {
		"html": false
	},
	"textdomain": "blocks",
	"editorScript": "file:../../../blocks/build/hero-image.js",
	"editorStyle": "file:../../../blocks/build/hero-image.css",
	"style": "file:../../../blocks/build/style-hero-image.css",
	"attributes": {
		"paddings": {
			"type": "object",
			"default": {
				"desktop": {
					"top": "100px",
					"bottom": "300px"
				},
				"mobile": {
					"top": "50px",
					"bottom": "400px"
				}
			}
		},
		"margins": {
			"type": "object",
			"default": {
				"desktop": {
					"top": "0px",
					"bottom": "0px",
					"title": "0px",
					"description": "20px",
					"button": "30px"
				},
				"mobile": {
					"top": "0px",
					"bottom": "0px",
					"title": "0px",
					"description": "15px",
					"button": "20px"
				}
			}
		},
		"gradient": {
			"type": "string",
			"default": "#FFFFFF"
		},
		"title": {
			"type": "object",
			"default": {
				"desktop": "Title",
				"mobile": ""
			}
		},
		"description": {
			"type": "object",
			"default": {
				"desktop": "Very very very very very very very very very very very very very very very very very long description.",
				"mobile": ""
			}
		},
		"button": {
			"type": "object",
			"default": {
				"desktop": "Button",
				"mobile": "",
				"target": "/",
				"type": "outlined-button"
			}
		},
		"colors": {
			"type": "object",
			"default": {
				"title": "#007953",
				"description": "#007953"
			}
		},
		"widths": {
			"type": "object",
			"default": {
				"desktop": {
					"title": "400px",
					"description": "400px"
				},
				"mobile": {
					"title": "100%",
					"description": "100%"
				}
			}
		},
		"image": {
			"type": "object",
			"default": {
				"desktop": {
					"url": "image-1.png",
					"alt": ""
				},
				"mobile": {
					"url": "image-1-mobile.png",
					"alt": ""
				},
				"width": {
					"desktop": "700px",
					"mobile": "auto"
				},
				"height": {
					"desktop": "500px",
					"mobile": "auto"
				},
				"position": {
					"desktop": {
						"top": "0px",
						"right": "0px",
						"bottom": "auto",
						"left": "auto"
					},
					"mobile": {
						"top": "90%",
						"right": "-16px",
						"bottom": "auto",
						"left": "-16px"
					}
				}
			}
		},
		"background": {
			"type": "object",
			"default": {
				"desktop": {
					"url": "background-1.jpg",
					"alt": ""
				},
				"mobile": {
					"url": "background-1-mobile.jpg",
					"alt": ""
				}
			}
		},
		"bigText": {
			"type": "boolean",
			"default": false
		}
	}
}
