{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "banescocontigo/hero-video",
	"version": "1.0.0",
	"title": "Hero video",
	"category": "widgets",
	"icon": "admin-home",
	"supports": {
		"html": false
	},
	"textdomain": "blocks",
	"editorScript": "file:../../../blocks/build/hero-video.js",
	"editorStyle": "file:../../../blocks/build/hero-video.css",
	"style": "file:../../../blocks/build/style-hero-video.css",
	"attributes": {
		"paddings": {
			"type": "object",
			"default": {
				"desktop": {
					"top": "100px",
					"bottom": "100px"
				},
				"mobile": {
					"top": "50px",
					"bottom": "200px"
				}
			}
		},
		"margins": {
			"type": "object",
			"default": {
				"desktop": {
					"top": "0px",
					"bottom": "0px",
					"title": "0px",
					"description": "20px",
					"button": "30px"
				},
				"mobile": {
					"top": "0px",
					"bottom": "0px",
					"title": "0px",
					"description": "15px",
					"button": "20px"
				}
			}
		},
		"gradient": {
			"type": "string",
			"default": "#FFFFFF"
		},
		"title": {
			"type": "object",
			"default": {
				"desktop": "Title",
				"mobile": ""
			}
		},
		"description": {
			"type": "object",
			"default": {
				"desktop": "Very very very very very very very very very very very very very very very very very long description.",
				"mobile": ""
			}
		},
		"button": {
			"type": "object",
			"default": {
				"desktop": "Button",
				"mobile": "",
				"target": "/",
				"type": "primary-button"
			}
		},
		"colors": {
			"type": "object",
			"default": {
				"title": "#FFFFFF",
				"description": "#FFFFFF"
			}
		},
		"widths": {
			"type": "object",
			"default": {
				"desktop": {
					"title": "400px",
					"description": "400px"
				},
				"mobile": {
					"title": "100%",
					"description": "100%"
				}
			}
		},
		"image": {
			"type": "object",
			"default": {
				"desktop": {
					"url": "play.svg",
					"alt": ""
				},
				"mobile": {
					"url": "",
					"alt": ""
				},
				"target": "/"
			}
		},
		"background": {
			"type": "object",
			"default": {
				"desktop": {
					"url": "background-1.jpg",
					"alt": ""
				},
				"mobile": {
					"url": "background-1-mobile.jpg",
					"alt": ""
				}
			}
		}
	}
}
